<script type="text/javascript">

    $.ajax({
        type: 'get',
        headers: {
            authorization: $.getCookie('authorization')
        },
        url: $.getApiHost('/user/machines/count'),
        success: function (ret) {
            $('#machine_count').html(ret.count);
        },
        error: function (error) {
            console.log(error);
        }
    });

    $.ajax({
        type: 'get',
        headers: {
            authorization: $.getCookie('authorization')
        },
        url: $.getApiHost('/user/profiles/count'),
        success: function (ret) {
            $('#profile_count').html(ret.count);
        },
        error: function (error) {
            console.log(error);
        }
    });

    $.ajax({
        type: 'get',
        headers: {
            authorization: $.getCookie('authorization')
        },
        url: $.getApiHost('/user/clients'),
        success: function (ret) {
            if(Array.isArray(ret))
                $('#client_count').html(ret.length);
        },
        error: function (error) {
            console.log(error);
        }
    });

    function getAnalysis(query){
        $('#morris-line-chart').empty();
        $.ajax({
            type: 'get',
            headers: {
                authorization: $.getCookie('authorization')
            },
            url: $.getApiHost('/user/analysis'),
            data: query || {},
            success: function (ret) {

                // console.log(ret);
                if(Array.isArray(ret) && ret.length)
                    Morris.Line({
                        element: 'morris-line-chart',
                        data: ret.map(function (data){
                            return {
                                date: new Date(data.date || Date.now()).toLocaleDateString(),
                                content: data.content,
                                error: data.error,
                            }
                        }),
                        xkey: 'date',
                        ykeys: ['content', 'error'],
                        labels: ['content', 'error'],
                        pointSize: 1,
                        hideHover: 'auto',
                        resize: true
                    });
                else
                    defaultMorrisLine();

                // $('#profile_count').html(ret.count);
            },
            error: function (error) {
                defaultMorrisLine();
                console.log(error);
            }
        });

    }
    getAnalysis();

function defaultMorrisLine(){
    Morris.Line({
        element: 'morris-line-chart',
        data: [{
            date: new Date().toLocaleDateString(),
            content: 0,
            error: 0,
            link: 0,
        }],
        xkey: 'date',
        ykeys: ['content', 'error'],
        labels: ['content', 'error'],
        pointSize: 1,
        hideHover: 'auto',
        resize: true
    });
}

function getLastDayAnalysis(num){
    var start = Date.now()- 86400000* (num || 1);
    var end = Date.now();
    getAnalysis({
        start : getQueryDate(start),
        end: getQueryDate(end)
    });
}

function getQueryDate(time){
    var date = new Date(time || Date.now());
    date.setHours(0);
    date.setMinutes(0);
    date.setSeconds(0);
    date.setMilliseconds(0);
    return date;
}


